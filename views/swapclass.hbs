<!DOCTYPE html> 
{{> navbar}}

<div style="padding: 0px 0px 0px 0px;margin: 0px 0px 0px 0px;background-color: #f5f5f5;">
    <div style="padding: 10px 30px 0px 30px;">
        <h1 class="d-inline-block float-none" style="margin: 0px 0px;color: #555555;font-size: 30px;font-family: Roboto, sans-serif;">
            <strong>Swap Classes</strong>
        </h1>
        <p class="d-inline-block float-none" style="margin: 0px 5px 0px 5px;color: #888888;font-family: Roboto, sans-serif;">Enter the class numbers of the classes you want to swap.</p>
    </div>
    <hr style="background-color: #a0a0a0;margin: 5px;height: 1px;"></hr>
    <div style="margin: 0px 0px 50px 0px;">
        <div class="float-left" style="background-color: #ffffff;padding: 0px 30px 0px 30px;width: 50%;">
           
            <div id="swap-form">
                <button id="swapclass-btn" class="btn btn-primary text-center float-right" type="button" style="font-family: Roboto, sans-serif;background-color: #427f50;padding: 2px;margin: 5px;width: 100px">Swap</button>
                <input class="form-control-sm float-right" type="search" placeholder="Enter class number to add" style="margin: 5px;width: 200px" id="add"></input>
                <input class="form-control-sm float-right" type="search" placeholder="Enter class number to drop" style="margin: 5px;width: 200px" id="drop"></input>
                <h3 class="d-inline-block float-none" style="margin: 0px 0px;color: #555555;font-size: 25px;font-family: Roboto, sans-serif;padding: 10px 0px  5px 0px;width: 50%;">
                    <strong>Course Offerings</strong><br>
                </h3>
                <div style="background-color: #e0e0e0;">
                    <hr style="background-color: #427f50;margin: 0px;height: 2px;width: 100%;"></hr>
                </div>
            </div>

            <ul class="list-group" id="classoffers_swap">
                <li class="list-group-item">
                    <span class="float-left" style="width: 15%;"><strong>Class No.</strong></span>
                    <span class="float-left" style="width: 25%;padding-left: 15px;"><strong>Course Code</strong></span>
                    <span class="float-left" style="width: 15%;"><strong>Section</strong></span>
                    <span class="float-left" style="width: 30%;"><strong>Class Schedule</strong></span>
                    <span class="float-left" style="width: 10%;"><strong>Room</strong></span>
                </li>
                
                {{#each courseOffer}}
                    <li class="list-group-item">
                        <span class="float-left" style="width: 15%;"> {{ classNum }} </span>
                        <span class="float-left" style="width: 25%;padding-left: 15px;"> {{ 0.courseCode }} </span>
                        <span class="float-left" style="width: 15%;"> {{ section }} </span>
                        <span class="float-left" style="width: 30%;"> {{ classSched }} </span>
                        <span class="float-left" style="width: 10%;"> {{ room }} </span>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="float-left" style="width: 50%;padding: 0px 10px 0px 10px;">
            <h3 class="d-inline-block float-none" style="margin: 0px 0px;color: #555555;font-size: 25px;font-family: Roboto, sans-serif;padding: 10px 0px  5px 0px;width: 100%;">
                <strong>My Classes</strong><br>
            </h3>
            <hr style="background-color: #427f50;margin: 0px;height: 2px;width: 100%;"></hr>
            <ul class="list-group" id="myclasses_swap">
                <li class="list-group-item text-wrap text-left d-inline-block flex-row flex-nowrap">
                    <span class="float-left" style="width: 20%;"><strong>Class No.</strong></span>
                    <span class="float-left" style="width: 20%;"><strong> Course Code</strong></span>
                    <span class="float-left" style="width: 15%;"><strong> Section</strong></span>
                    <span class="float-left" style="width: 30%;"><strong> Class Schedule</strong></span>
					<span class="float-left" style="width: 10%;"><strong> Room</strong></span>
                </li>

                {{#each myClasses}}
                    <li class="list-group-item text-wrap text-left d-inline-block flex-row flex-nowrap">
                        <span class="float-left" style="width: 20%;"> {{ classNum }} </span>
                        <span class="float-left" style="width: 20%;"> {{ 0.courseCode }} </span>
                        <span class="float-left" style="width: 15%;"> {{ section }} </span>
                        <span class="float-left" style="width: 30%;"> {{ classSched }} </span>
                        <span class="float-left" style="width: 10%;"> {{ room }} </span>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

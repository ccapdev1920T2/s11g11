<title>Login</title>

<div id="login-container"> 
  <div class="modal-dialog text-center">
    <div class="col-sm-9 main-section">
      <div class="modal-content">
        <div class="col-12 logo-img">
          <img src="assets/img/logo.png">
        </div>
          <form method="POST" id="login" name="login">
            <div class="col-12 form-input">
                <div class="login-form-group">
                  <input type="email" class="form-control" placeholder="Email" id="email" name="email" required>
                </div>

                <div class="login-form-group">
                  <input type="password" class="form-control" placeholder="Password" id="pw" name="password"required>
                </div>

                <button type="submit" class="btn btn-success" id="login">Login</button>
            </div>
          </form>
        <div class="col-12 register">
          Don't have an account? <a href="/register"> Register here </a>
        </div>
      </div>
    </div>
  </div>
</div>
